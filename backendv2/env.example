# ============================================================
# MDReader Backend v2 - Environment Variables
# Copy to .env and fill with your values
# ============================================================

# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME="MDReader API v2"
APP_VERSION=2.0.0
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=7001

# Database
DATABASE_URL=postgresql+asyncpg://mdreader:mdreader@localhost:5432/mdreader
# For Alembic migrations (sync):
DATABASE_URL_SYNC=postgresql://mdreader:mdreader@localhost:5432/mdreader

# Redis (Phase 1 - Caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Frontend URLs)
CORS_ORIGINS=["http://localhost:5173","http://localhost:5174"]

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Rate Limiting (Phase 1)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_TYPES=["image/jpeg","image/png","image/gif","text/markdown","text/plain"]

# Hocuspocus (Phase 1 - Collaboration)
HOCUSPOCUS_URL=ws://localhost:1234
HOCUSPOCUS_SECRET=your-hocuspocus-secret-here

# ============================================================
# Email / SMTP (SendGrid)
# ============================================================
# Backend: "console" (dev - prints to logs) or "smtp" (production)
EMAIL_BACKEND=console

# SendGrid SMTP Settings
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_password_here

# Sender Identity (must match verified sender in SendGrid)
SMTP_FROM_EMAIL=naumche.simi@gmail.com
SMTP_FROM_NAME=MDReader

# Public URL for email links (invite accept, etc.)
APP_PUBLIC_URL=http://localhost:5173

# ============================================================
# Observability (Optional)
# ============================================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================
# AI Integration (Frontend - Vite Environment Variables)
# ============================================================
# These are used by the frontend React app
# Add these to your .env file in the frontend/ directory or set them in your deployment

# AI Configuration
VITE_AI_ENABLED=true
VITE_AI_DEFAULT_PROVIDER=gemini
VITE_AI_DEBUG=false
VITE_AI_MAX_TOKENS=2000
VITE_AI_TEMPERATURE=0.7
VITE_AI_TIMEOUT_MS=30000
VITE_AI_RETRY_ATTEMPTS=3
VITE_AI_RATE_LIMIT_PER_MINUTE=20

# OpenAI API (optional - only needed if using OpenAI models)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_BASE_URL=https://api.openai.com/v1
VITE_OPENAI_MODEL=gpt-4

# Anthropic API (optional - only needed if using Claude models)
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_ANTHROPIC_BASE_URL=https://api.anthropic.com
VITE_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini API (optional - only needed if using Gemini models)
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
VITE_GEMINI_MODEL=gemini-1.5-flash

# OpenRouter API (optional - unified access to 100+ models)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here
VITE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
VITE_OPENROUTER_MODEL=anthropic/claude-3-sonnet

